{
    "name": "openbugs",
    "displayName": "OpenBUGS",
    "description": "OpenBUGS for Visual Studio Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:bugs",
        "onCommand:foo.helloWorld"
    ],
    "main": "./client/out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "bugs",
                "aliases": [
                    "BUGS",
                    "bugs",
                    "OpenBUGS",
                    "openbugs"
                ],
                "extensions": [
                    ".bugs"
                ],
                "filenamePatterns": [
                    "*model*.txt",
                    "*init*.txt",
                    "*data*.txt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bugs",
                "scopeName": "source.bugs",
                "path": "./syntaxes/bugs.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "bugs",
                "path": "./snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run compileParser && tsc -b",
        "watch": "npm run compile-parser && tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "compileParser": "npx tspeg ./src/bugs.peg ./server/src/bugsPeg.ts",
        "test": "npm run compile && npm run test-printer",
        "testParser": "npx tsc -t es2019 -m commonjs ./src/test/testParser.ts && node ./src/test/testParser.js",
        "testPrinter": "npx tsc -t es2019 -m commonjs ./src/test/testPrinter.ts && node ./src/test/testPrinter.js"
    },
    "devDependencies": {
        "@types/node": "^15.12.0",
        "tspeg": "^3.1.0",
        "typescript": "^4.3.2"
    }
}